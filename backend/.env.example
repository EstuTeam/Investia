# ===========================================
# Investia Backend Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env to version control!
# ===========================================

# Database Configuration
DATABASE_URL=sqlite:///./trading_bot.db
# For production (Neon PostgreSQL):
# DATABASE_URL=postgresql://user:pass@host/dbname?sslmode=require

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=False

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# CORS Settings
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Trading Settings
DEFAULT_TICKER=TRALT.IS
DEFAULT_INTERVAL=5m
DEFAULT_PERIOD=1d

# Risk Management
MAX_RISK_PER_TRADE=2.0
MAX_DAILY_LOSS=5.0
MAX_POSITIONS=5

# Caching
CACHE_TTL_REALTIME=60
CACHE_TTL_HISTORICAL=3600

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=120
RATE_LIMIT_PER_HOUR=3000
RATE_LIMIT_BURST=30

# Security - Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE-ME-GENERATE-WITH-openssl-rand-hex-32
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_DAYS=30

# Notifications (Optional)
EMAIL_ENABLED=False
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Logging
LOG_LEVEL=INFO

# AI - Claude API (get from https://console.anthropic.com)
ANTHROPIC_API_KEY=
